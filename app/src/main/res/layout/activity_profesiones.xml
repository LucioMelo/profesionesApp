<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tesis.profesionesapp.controlador.ProfesionesActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/idtextViewPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:text="¿Ingrese su profesión?" />

        <Spinner
            android:id="@+id/idSpinnerProfesiones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.07" />

        <EditText
            android:id="@+id/idEditTextNuevaProfesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese su profesión."
            android:maxLength="15"
            android:layout_weight="0.03" />

        <Button
            android:id="@+id/idButtonSiguienteProfesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Siguiente" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
